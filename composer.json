{
    "name": "rebelcode/tree-rendering",
    "description": "A PHP library for rendering all kinds of trees.",
    "type": "library",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "RebelCode",
            "email": "dev@rebelcode.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.4 | ^7.0",
        "psr/container": "^1.0",
        "dhii/i18n-helper-base": "^0.1-alpha1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "dhii/php-cs-fixer-config": "^0.1",
        "codeclimate/php-test-reporter": "<=0.3.2",
        "dhii/data-container-base": "^0.1-alpha2"
    },
    "autoload": {
        "psr-4": {
            "RebelCode\\Tree\\Rendering\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RebelCode\\Tree\\Rendering\\UnitTest\\": "test/unit",
            "RebelCode\\Tree\\Rendering\\FuncTest\\": "test/functional"
        }
    },
    "scripts": {
        "test": "phpunit",
        "csfix": "php-cs-fixer fix -vvv"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    }
}
